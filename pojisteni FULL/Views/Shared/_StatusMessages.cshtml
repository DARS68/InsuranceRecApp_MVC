@{
    var type = (string)TempData["_alert.type"];
    var title = (string)TempData["_alert.title"];
    var body = (string)TempData["_alert.body"];
}

@if (!string.IsNullOrEmpty(type))
{
    <div class="alert alert-@type alert-dismissible fade show" role="alert" id="myAlert">
        <strong>@title</strong> @body
        <button type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <script>
        window.setTimeout(function () {
            document.querySelector('#myAlert').remove();
        }, 5000);
    </script>

}