@*@model pojisteni_FULL.Models.InsuredPerson*@
@using pojisteni_FULL.Models.ViewModels;
@model InsuredPersonViewModel

@{
    ViewData["Title"] = "Vymazání";
}

<h1>@ViewData["Title"]</h1>

<div>
    <p>
        « 
        Opravdu si přejete vymazat pojištěnce
        @Html.DisplayFor(model => model.InsuredPersonItem.FirstName)
        @Html.DisplayFor(model => model.InsuredPersonItem.LastName)?
         »</«>
    </p>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsuredPersonItem.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuredPersonItem.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsuredPersonItem.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuredPersonItem.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsuredPersonItem.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuredPersonItem.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsuredPersonItem.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuredPersonItem.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsuredPersonItem.StreetAndNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuredPersonItem.StreetAndNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsuredPersonItem.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuredPersonItem.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsuredPersonItem.ZipCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuredPersonItem.ZipCode)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="InsuredPersonItem.InsuredPersonID" />
        <input type="submit" value="Vymazat" class="btn btn-danger" /> 
        <a class="btn btn-primary" asp-action="Index">Zpět na seznam</a>
    </form>
</div>
