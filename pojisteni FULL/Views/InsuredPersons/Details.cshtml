@if (Model.Count() > 0)
{
	<div class="table-responsive">
		<table class="table">
			<thead>
				<tr>
					<th>Druh pojištění</th>
					<th>Pojistná částka</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var insurance in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => insurance.InsuranceName)
							<a asp-controller="Insurances" asp-action="Details" asp-route-id="@insurance.InsuranceID">@insurance.InsuranceName</a>
						</td>
						<td>
							@Html.DisplayFor(modelItem => insurance.InsuranceAmount)
							@*<a asp-controller="Insurances" asp-action="Details" asp-route-id="@insurance.InsuranceAmount">@insurance.InsuranceAmount</a>*@
							Kč
						</td>
						<td>
							<a asp-controller="Insurances" asp-action="Edit" asp-route-id="@insurance.InsuranceID" class="btn btn-sm btn-warning me-1">Upravit</a>
							<a asp-controller="Insurances" asp-action="Delete" asp-route-id="@insurance.InsuranceID" class="btn btn-sm btn-danger">Odstranit</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
}

<div>
	<a asp-controller="Insurances" asp-action="Create" class="btn btn-primary">Přidat pojištění</a>
