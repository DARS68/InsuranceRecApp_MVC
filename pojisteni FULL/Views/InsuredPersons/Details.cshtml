@model pojisteni_FULL.Models.InsuredPerson

@{
	ViewData["Title"] = "Pojištěnec detail";
}



<div>
	<div>
		<img src="~/images/avatar.png" alt="avatar" />

		<h4>
			@Html.DisplayFor(model => model.FirstName)
			@Html.DisplayFor(model => model.LastName)

		</h4>

	</div>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Email)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Email)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.PhoneNumber)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.PhoneNumber)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.StreetAndNumber)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.StreetAndNumber)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.City)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.City)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.ZipCode)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ZipCode)
		</dd>
	</dl>
</div>
<div>
	<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Upravit pojištěnce</a>
	<a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.Id">Odstranit pojištěnce</a>
	<a class="btn btn-primary" asp-action="Index">Zpět na seznam</a>
</div>

