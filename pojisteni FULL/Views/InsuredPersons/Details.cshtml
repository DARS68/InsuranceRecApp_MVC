@using pojisteni_FULL.Models
@model pojisteni_FULL.Models.InsuredPerson
@*@model pojisteni_FULL.Models.ViewModels.InsuredPersonInsuraceViewModel*@

@{
	ViewData["Title"] = "Pojištěnec detail";
}



<div>
	<div>
		<img src="~/images/avatar.png" alt="avatar" />

		<h4>
			@Html.DisplayFor(model => model.FirstName)
			@Html.DisplayFor(model => model.LastName)

		</h4>

	</div>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Email)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Email)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.PhoneNumber)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.PhoneNumber)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.StreetAndNumber)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.StreetAndNumber)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.City)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.City)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.ZipCode)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ZipCode)
		</dd>
	</dl>
</div>


@if (Model.Insurances.Count > 0)
{
	<div class="table-responsive">
		<table class="table">
			<thead>
				<tr>
					<th>Druh pojištění</th>
					<th>Pojistná částka</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var insurance in Model.Insurances)
				{
					<tr>
						<td>
					@*		@Html.DisplayFor(modelItem => insurance.InsuranceName)*@
							<a asp-controller="Insurances" asp-action="Details" asp-route-id="@insurance.InsuranceID">@insurance.InsuranceName</a>
						</td>
						<td>
							@Html.DisplayFor(modelItem => insurance.InsuranceAmount)
							Kč
						</td>
						<td>
							<a asp-controller="Insurances" asp-action="Edit" asp-route-id="@insurance.InsuranceID" class="btn btn-sm btn-warning me-1">Upravit</a>
							<a asp-controller="Insurances" asp-action="Delete" asp-route-id="@insurance.InsuranceID" class="btn btn-sm btn-danger">Odstranit</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
}


<div>
	<a asp-controller="Insurances" asp-action="Create" class="btn btn-primary">Přidat pojištění</a>
	@*	<a asp-controller="Insurances" asp-action="Create" asp-route-id="Insurances.Id" class="btn btn-primary">Přidat pojištění</a>*@
	<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.InsuredPersonID">Upravit pojištěnce</a>
	<a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.InsuredPersonID">Odstranit pojištěnce</a>
	<a class="btn btn-primary" asp-action="Index">Zpět na seznam</a>
</div>

