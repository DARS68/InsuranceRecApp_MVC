<table class="table">
	<thead>
		<tr>
			<th>
				@Extensions.GetDisplayName(typeof(InsuranceItem), nameof(InsuranceItem.InsuredPersonName))
				@*	@Html.DisplayNameFor(model => model.InsuredPersonItem.FirstName) a
				@Html.DisplayNameFor(model => model.InsuredPersonItem.LastName)*@
			</th>
			<th>
				@Extensions.GetDisplayName(typeof(InsuranceItem), nameof(InsuranceItem.InsuredPersonStreetNumberCity))
				@*				@Html.DisplayNameFor(model => model.InsuredPersonItem.StreetAndNumber) a
				@Html.DisplayNameFor(model => model.InsuredPersonItem.City)*@
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.InsuredPersonItems)
		{
			<tr>
				<td>
					<a asp-action="Details" asp-route-id="@item.InsuredPersonID">
						@item.FirstName @item.LastName
					</a>
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.StreetAndNumber),
					@Html.DisplayFor(modelItem => item.City)
				</td>
				<td>
					<a class="btn btn-warning" asp-action="Edit"
				   asp-route-id="@item.InsuredPersonID">Upravit</a>
					<a class="btn btn-danger" asp-action="Delete"
				   asp-route-id="@item.InsuredPersonID">Odstranit</a>
				</td>
			</tr>
		}
	</tbody>
</table>
