@model InsuredPersonListViewModel

@{
	ViewData["Title"] = "Pojištěnci";
}


<div class="row">

	<div class="col-2 my-3 p-4 bg-light rounded">
		<h1 class="display-6">@ViewData["Title"]</h1>
		</div>
	<div class="col-10 my-3 py-4 bg-light rounded">
	<h1></h1>
		<div class="col bg-default text-succes text-left">
			<a class="btn btn-primary" asp-action="Create">Přidat nového pojištěnce</a>
		</div>
	</div>
</div>

