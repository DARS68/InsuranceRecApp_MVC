@using pojisteni_FULL.Models.ViewModels
@model InsuredPersonInsuranceViewModel

@{
	ViewData["Title"] = "Detail pojištění";
}
<div class="col">
	<div class="row">
		<div class="col-12 p-4 bg-light rounded border">
			<h1 class="display-6">@ViewData["Title"]</h1>
			<div class="text-left">
				«
				@Html.DisplayFor(model => model.InsuredPersonItem.FirstName)
				@Html.DisplayFor(model => model.InsuredPersonItem.LastName)
				»</>
			</div>
		</div>
	</div>
</div>




<div>

	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.InsuranceItem.InsuranceID)
		</dt>
		<dd class="col-sm-10">
			<span class="badge badge-pill badge-warning">
				@Html.DisplayFor(model => model.InsuranceItem.InsuranceID)
			</span>
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.InsuranceItem.InsuranceName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.InsuranceItem.InsuranceName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.InsuranceItem.InsuranceDescription)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.InsuranceItem.InsuranceDescription)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.InsuranceItem.InsuranceAmount)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.InsuranceItem.InsuranceAmount) Kč
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.InsuranceItem.SubjectOfInsurance)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.InsuranceItem.SubjectOfInsurance)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.InsuranceItem.ValidFrom)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.InsuranceItem.ValidFrom)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.InsuranceItem.ValidTo)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.InsuranceItem.ValidTo)
		</dd>
	</dl>
</div>
<div>
	<a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.InsuranceItem.InsuranceID">Upravit</a>
	<a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.InsuranceItem.InsuranceID">Odstranit</a>
	<a class="btn btn-primary" onclick="javascript:history.back();">Zpět na seznam</a>
	@*<a asp-action="Index">Back to List</a>*@
</div>
