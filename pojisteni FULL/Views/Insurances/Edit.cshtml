@using pojisteni_FULL.Models.ViewModels;
@model InsuredPersonInsuranceViewModel

@{
	ViewData["Title"] = "Úprava pojištění";
}

<div class="col">
	<div class="row">
		<div class="col-12 p-4 bg-light rounded border">
			<h1 class="display-6">@ViewData["Title"]</h1>
			<div class="text-left">
				«
				@Html.DisplayFor(model => model.InsuredPersonItem.FirstName)
				@Html.DisplayFor(model => model.InsuredPersonItem.LastName)
				»</>
			</div>
		</div>
	</div>
</div>

<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="InsuranceItem.InsuranceID" />
			<div class="form-group">
				<label asp-for="InsuranceItem.InsuranceName" class="control-label"></label>
				<input asp-for="InsuranceItem.InsuranceName" class="form-control" />
				<span asp-validation-for="InsuranceItem.InsuranceName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="InsuranceItem.InsuranceDescription" class="control-label"></label>
				<input asp-for="InsuranceItem.InsuranceDescription" class="form-control" />
				<span asp-validation-for="InsuranceItem.InsuranceDescription" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="InsuranceItem.InsuranceAmount" class="control-label"></label>
				<input asp-for="InsuranceItem.InsuranceAmount" class="form-control" />
				<span asp-validation-for="InsuranceItem.InsuranceAmount" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="InsuranceItem.SubjectOfInsurance" class="control-label"></label>
				<input asp-for="InsuranceItem.SubjectOfInsurance" class="form-control" />
				<span asp-validation-for="InsuranceItem.SubjectOfInsurance" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="InsuranceItem.ValidFrom" class="control-label"></label>
				<input asp-for="InsuranceItem.ValidFrom" class="form-control" />
				<span asp-validation-for="InsuranceItem.ValidFrom" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="InsuranceItem.ValidTo" class="control-label"></label>
				<input asp-for="InsuranceItem.ValidTo" class="form-control" />
				<span asp-validation-for="InsuranceItem.ValidTo" class="text-danger"></span>
			</div>
			<input type="hidden" asp-for="InsuredPersonItem.InsuredPersonID" />
			@*<div class="form-group">
			<label asp-for="InsuredPersonId" class="control-label"></label>
			<input asp-for="InsuredPersonId" value="@Model.InsuredPersonId" class="form-control" />
			<span asp-validation-for="InsuredPersonId" class="text-danger"></span>
			</div>*@
			<div class="form-group py-2">
				<input type="submit" value="Uložit" class="btn btn-success" />
				<a class="btn btn-primary" onclick="javascript:history.back();">Zpět na seznam</a>
			</div>
		</form>
	</div>
</div>

